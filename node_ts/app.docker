# Set the base image
FROM biz2credit/baseimage-node:release1.0

# Install PM2
RUN npm install -g pm2

RUN mkdir -p /usr/src/app

# Define working directory
WORKDIR /usr/src/app
COPY . /usr/src/app

RUN npm install
RUN npm run build
RUN npm run start:seed

# Run app
CMD ["pm2", "start", "processes.json", "--no-daemon"]
